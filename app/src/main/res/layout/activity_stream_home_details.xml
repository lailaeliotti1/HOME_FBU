<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stream.StreamHomeDetailsActivity">

    <ImageView
        android:id="@+id/HomeDetailImageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/BedroomDetailsTextView"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_marginStart="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BathroomDetailsTextView" />

    <TextView
        android:id="@+id/BathroomDetailsTextView"
        android:layout_width="299dp"
        android:layout_height="30dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="1dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HomeDetailImageView"
        tools:text="Username" />

    <TextView
        android:id="@+id/LocationDetailsTextView"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_marginStart="55dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BedroomDetailsTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>